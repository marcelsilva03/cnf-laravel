APP_NAME="CNF"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost
APP_LOCALE=pt_BR
APP_FALLBACK_LOCALE=en

# === BANCO DE DADOS LOCAL ===
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=cnf_local
DB_USERNAME=root
DB_PASSWORD=

# === ARMAZENAMENTO E SESSÃO ===
CACHE_DRIVER=file
FILESYSTEM_DISK=local
QUEUE_CONNECTION=sync
SESSION_DRIVER=file
SESSION_LIFETIME=120

# === E-MAIL (TESTE LOCAL, SEM ENVIO REAL) ===
MAIL_MAILER=log
MAIL_FROM_ADDRESS=nao-responda@example.com
MAIL_FROM_NAME="${APP_NAME}"

# === RECAPTCHA (DESATIVADO EM LOCAL) ===
RECAPTCHA_DISABLED=true

# === DOMÍNIOS/IPs (DESLIGADOS EM LOCAL) ===
RESTRICT_TEST_DOMAIN=false
ALLOWED_IPS=

